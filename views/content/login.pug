extends ../template

block additionalScripts
    script(src='/js/login.js')

block body
    main
        div(class='login-main')
            div(class='login-container')
                p(class='logo') OpenForum
                form(class='login-form' id='login-form')
                    div(class='login-form__input-group')
                        label(class='login-form__input-label' for='email') E-mail
                        input(class='login-form__input' id='email' type='email' required=true)
                    div(class='login-form__input-group')
                        label(class='login-form__input-label' for='password') Пароль
                        input(class='login-form__input' id='password' type="password" pattern="[0-9a-zA-Z]+" required=true minlength=8)
                    a(class='login-form__link' href="/register") Регистрация
                    input(class='login-form__submit-button' id='login-btn' type='submit' value='Войти')
                a(class='login-form__link' href="/") Вернуться на главную



