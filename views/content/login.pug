extends ../template

block body
    main
        div(class='login')
            div(class='login__container')
                p(class='login__logo') OpenForum
                form(class='login__form')
                    div(class='login__form-group')
                        label(class='login__form-input-label' for='username') Логин или E-mail
                        input(class='login__form-input' id='username' type=text)
                    div(class='login__form-group')
                        label(class='login__form-input-label' for='password') Пароль
                        input(class='login__form-input' id='password' type=text)
                    button(class='login__form-button') Войти



